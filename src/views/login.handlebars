<h2>Login:</h2>
<hr>
<form onsubmit="login(event)" id="formLogin" action="/api/sessions/login" method="post">

    {{#if error}}
        <div style="font-weight: bolder; color: red;">{{error}}</div>
    {{/if}}

    {{#if mensaje}}
        <div style="font-weight: bolder; color: blue;">{{mensaje}}</div>
    {{/if}}

    <input type="email" name="email" placeholder="correo electrónico">
    <input type="password" name="password" placeholder="contraseña">
    <input type="text" name="web" value="web" hidden>
    <br><br>
    <input type="submit" value="Login">
</form>
<br><br>
<a type="button" class="btn btn-success" href="/api/sessions/github">Acceder con Github</a>
<br><br>

<script src="/assets/js/login.js"></script>